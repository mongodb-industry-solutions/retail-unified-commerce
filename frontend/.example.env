# Configure this file with your own local variables and rename it to `.env`
# to enable the app. This configuration is required whether you run it
# locally or with Docker.

# MongoDB connection string (replace with your own credentials)
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-url>/

# Google Maps API key (used for store locator map)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Database and collection names
DB_NAME=retail-unified-commerce
NEXT_PUBLIC_COLLECTION_PRODUCTS=products
NEXT_PUBLIC_COLLECTION_INVENTORY=inventory
NEXT_PUBLIC_COLLECTION_STORES=stores

# Atlas Search index name
SEARCH_INDEX=product_atlas_search

# Public frontend config
NEXT_PUBLIC_SPOILED_URL=https://your-url.com
NEXT_PUBLIC_BACKEND_ENDPOINT=http://localhost:8000

